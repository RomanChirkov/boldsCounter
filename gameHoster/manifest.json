{
    "manifest_version": 3,
    "name": "pd mafia sender",
    "version": "1.0",
    "description": "Парсер болдов для pd mafia",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "contextMenus",
        "contentSettings",
        "background"
    ],
    "background": {
        "service_worker": "index.js"
    },
    "host_permissions": [
        "https://prodota.ru/*"
    ],
    "icons": {
        "128": "pd.jpg"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://prodota.ru/*"
            ],
            "js": [
                "index.js"
            ]
        }
    ]
}